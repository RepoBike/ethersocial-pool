{{#if model.candidates}}
<h4>최근 발견된 블록</h4>
<div class="table-responsive">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>블록번호</th>
        <th>발견시간</th>
        <th>작업비율</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.candidates as |block|}}
      <tr>
        <td><a href="https://explorer.ethereumsocial.kr/#/block/{{block.height}}" rel="nofollow" target="_blank">{{format-number block.height}}</a></td>
        <td>{{format-date-locale block.timestamp}}</td>
        <td>
          {{#if block.isLucky}}
          <span class="label label-success">{{format-number block.variance style='percent'}}</span>
          {{else}}
          <span class="label label-info">{{format-number block.variance style='percent'}}</span>
          {{/if}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{else}}
<h3>새 블록 없음</h3>
{{/if}}
